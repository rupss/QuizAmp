
/*
 * CSS for user profile
 */

@CHARSET "UTF-8";


body {
	color: white;
	font-family: arial;
}

.bodyclass {
	width: 1021px;
	margin: 0 auto;
}

.header{
	clear: both;
	background-color: #972321;
	text-align: center;
	width: 1000px;
	height: 89px;
	border-radius: 10px 10px 10px 10px;
    border: 4px solid white;
    margin: 5px auto;
    padding: 5px;
	padding-top: 10px;
	padding-bottom: 10px;
	margin-top: 4px;
}

.backpanel {
     background-color: #972321;
     width: 1000px;
     height: 305px;
     border-radius: 10px 10px 10px 10px;
     border: 4px solid white;
     margin: 5px auto;
     padding: 5px;
}

.firstpanel {
	 clear: left;
	 width: 215px;
	 height: 270px;
     background-color: #68B2C5;
     border-radius: 10px 10px 10px 10px;
     border: 4px solid white;
     margin: 6px;
     padding: 6px;
     overflow: hidden;
}

.panel {
	 float: left;
	 width: 215px;
	 height: 270px;
     background-color: #8ED1D6;
     border-radius: 10px 10px 10px 10px;
     border: 4px solid white;
     margin: 6px;
     padding: 6px;
     overflow-x: hidden;
     overflow-y: auto;
}

.panelcontent {

}

.friendbutton {
	 margin: 0px auto;
	 margin-top: -30px;
     background-color: #CE3F37;
     height: 75px;
     width: 150px;
     text-align: center;
     font-size: 20px;
     border-radius: 10px 10px 10px 10px;
     border: 4px solid white;
     padding: 5px;
}

.seeall {
	background-color: #AF110D;
	text-align: center;
	font-size: 13px;
	width: 60px;
	height: 22px;
	border-radius: 10px 10px 10px 10px;
    border: 2px solid white;
    padding: 5px;
	padding-top: 0px;
	padding-bottom: 0px;
	margin: 0 auto;
	margin-top: -14px;
	z-index: 3;
}

#second-panel{
   left: 466px;
}

#third-panel{
   left: 713px;
}

#fourth-panel{
 	left: 959px;
}
.seealllink {
	display: block;
	margin: 0px auto;
	margin-top: 3px;
	vertical-align:center;
}


#friendbutton {
	clear: both;
	vertical-align: center;
	margin-top: 21px;
}

#friendbutton a {
	color: white;
}

#friendbutton[onclick] {
	cursor: pointer;
}

#profilepic {
	max-width: 210px;
	margin-top: 50px;
}

#AImage {
	width: 32px;
}

#SmallAImage {
	width: 15px;
}


.tip {
    position: absolute; 
	top: 0px; 
	left: 0px; 
	width: 150px; 
	height: 40px;
	background-color: #972321;
	border-radius: 10px 10px 10px 10px;
    border: 1px solid white;
    font-size: smaller;
	display: none;
	text-align: center;
}

.hasTip {
    text-decoration: underline;
	color: #ff0000;
}

.tipTitle {
	font-weight: bold;
}

a:link {color: #FFFFFF; text-decoration: underline}
a:visited {color: #616161; text-decoration: none}

a:link.seealllink {color: #FFFFFF; text-decoration: none}
a:visited.seealllink {color: #BEBEBE; text-decoration: none}


